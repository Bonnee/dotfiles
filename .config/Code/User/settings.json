// Place your settings in this file to overwrite the default settings
{
    // BEGIN laptop
    //"editor.fontSize": 14,
    //"markdown.preview.fontSize": 14,
    //"terminal.integrated.fontSize": 14,
    //"window.zoomLevel": 1,
    //"editor.smoothScrolling": false,
    // END laptop
    // BEGIN desktop
    "window.zoomLevel": 0,
    "editor.smoothScrolling": true,
    // END desktop
    "editor.fontFamily": "monospace",
    "editor.fontLigatures": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.renderIndentGuides": true,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 160,
    "editor.snippetSuggestions": "top",
    "editor.insertSpaces": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.scrollBeyondLastLine": false,
    "files.autoSave": "onFocusChange",
    "extensions.autoUpdate": true,
    "terminal.external.linuxExec": "termite",
    "workbench.iconTheme": "vs-seti",
    "omnisharp.path": "/opt/omnisharp-roslyn/OmniSharp.exe",
    "C_Cpp.intelliSenseEngine": "Default",
    "python.autoComplete.addBrackets": true,
    "workbench.editor.tabSizing": "shrink",
    "git.autofetch": true,
    "emojisense.languages": {
        "python": true
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "editor.tabSize": 2,
    "breadcrumbs.enabled": true,
    "editor.lineNumbers": "relative",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, UseTab: true, IndentWidth: 4, TabWidth: 4, ColumnLimit: 0}",
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.experimentalFeatures": "Enabled",
    "C_Cpp.loggingLevel": "Warning",
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "editor.cursorSmoothCaretAnimation": true,
    "liveshare.allowGuestDebugControl": true,
    "liveshare.allowGuestTaskControl": true,
    "editor.cursorBlinking": "smooth",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.ref.viewer": "tabOrBrowser",
    "workbench.editor.scrollToSwitchTabs": true,
    "telemetry.enableTelemetry": false,
    "editor.fontSize": 12,
    "diffEditor.ignoreTrimWhitespace": false,
    "python.jediEnabled": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "prettier.useTabs": true,
    "editor.wordWrapColumn": 160,
    "vim.textwidth": 160,
    "html.format.wrapLineLength": 160,
    "yaml.format.printWidth": 160,
    "python.languageServer": "Microsoft"
}