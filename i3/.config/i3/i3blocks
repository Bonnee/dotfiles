[bandwidth]
label=
align=center

[disk-io]
label=
interval=persist
align=center
command=$HOME/.config/i3/blocks/disk-io -s " " -w 0 -t 2 -T 102400

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=
min_width=1 100.00%
align=center
separator=false

[load_average]
label=
separator=false

[temperature]
label=
command=/usr/lib/i3blocks/temperature --chip coretemp-isa-0000

