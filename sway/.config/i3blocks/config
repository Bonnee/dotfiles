# END laptop

[bandwidth]
label=&#xf0e8;
align=center

[disk-io]
label=&#xf1c0;
interval=persist
align=center
command=$HOME/.config/i3blocks/blocks/disk-io -s " " -w 0 -t 4 -T 102400

# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=&#xf085;
min_width=ïƒ¤1 100.00%
align=center
separator=false

[load_average]
label=&#xf1fe;
separator=false

[temperature]
label=&#xf2c9;
command=/usr/lib/i3blocks/temperature --chip coretemp-isa-0000 -w 60 -c 70

